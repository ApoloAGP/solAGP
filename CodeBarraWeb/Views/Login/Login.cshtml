@model CodeBarraWeb.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>CodeBarraWeb</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    @Styles.Render("~/bootstrapPopup/css")
    @Styles.Render("~/Estilos/css")


</head>
<body class="hold-transition">
    <div class="login-box">
        <div class="login-logo">
            <a href="@Url.Action("Index", "Reporte")">Bienvenido <b>CodeBarraWeb!</b></a>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">Ingresar su cuenta para iniciar sesión</p>
            @using (Html.BeginForm("Login", "Login"))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group has-feedback">
                    @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control", type = "Usuario", placeholder = "Usuario" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                    <div class="form-group has-feedback">
                        @Html.PasswordFor(m => m.Contraseña, new { @class = "form-control", type = "Password", placeholder = "Contraseña" })
                        @Html.ValidationMessageFor(m => m.Contraseña, "", new { @class = "text-danger" })
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    </div>
                    <div class="row">
                        <div class="col-xs-5">
                            <button type="submit" class="btn btn-primary btn-block btn-flat">Iniciar Sesión</button>
                        </div>
                    </div>
            }

        </div>

    </div>

    @Scripts.Render("~/Bootstrap/assets/js")
    @*@Scripts.Render("~/ReportePopup/js")
    @Scripts.Render("~/Scripts/jquery/js")
    @Scripts.Render("~/bootstrap/js")

    @Scripts.Render("~/Content/plugins/icheck/js")
    @Scripts.Render("~/Content/plugins/jquery-validate/js")*@

</body>
</html>


